{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "build/.tsbuildinfo",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "Node16",
    "rootDir": "src",
    "moduleResolution": "Node16",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
